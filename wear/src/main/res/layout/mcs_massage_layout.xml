<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/massage_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/hi_unselect"/>

            <ImageView
                android:id="@+id/massage_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/low_unselect"/>

            <ImageView
                android:id="@+id/massage_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/off_select"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/driver_seat"
            android:layout_below="@+id/title"
            android:layout_marginLeft="15dp"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:src="@drawable/mcs_driver"/>

    </LinearLayout>
    <TextView
        android:id="@+id/label"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:textColor="#98ffffff"
        android:text="Massage"/>

</RelativeLayout>